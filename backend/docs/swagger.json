                    "multipart/form-data"
                ],
                "tags": [
                    "file"
                ],
                "summary": "Upload files",
                "operationId": "uploadFiles",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Target directory",
                        "name": "path",
                        "in": "query"
                    },
                    {
                        "type": "file",
                        "description": "Files to upload",
                        "name": "file",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
